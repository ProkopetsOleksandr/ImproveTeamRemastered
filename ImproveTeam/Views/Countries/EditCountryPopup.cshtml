@model ImproveTeam.Models.Countries.EditCountryViewModel

<div>
    <div class="row margin-bottom-10">
        <div class="col-md-6">
            @Html.LabelFor(m => m.Name, new { @class = "control-label" })
            @Html.EditorFor(m => m.Name, new { htmlAttributes = new { @class = "form-control", disabled = "disabled" } })
        </div>
        <div class="col-md-6">
            @Html.LabelFor(m => m.Code, new { @class = "control-label" })
            @Html.EditorFor(m => m.Code, new { htmlAttributes = new { @class = "form-control", disabled = "disabled" } })
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div id="regionsGridContainer" class="gridContainer" 
                 data-load-url="@Url.Action("GetRegions", "Countries", new { countryId = Model.Id })"
                 data-insert-url="@Url.Action("AddRegion", "Countries", new { countryId = Model.Id })"
                 data-update-url="@Url.Action("UpdateRegion", "Countries", new { regionId = "__regionId__", name = "__regionName__" })"
                 data-remove-url="@Url.Action("DeleteRegion", "Countries", new { regionId = "__regionId__" })">
            </div>
        </div>
        <div class="col-md-6">
            Города выбранного региона
        </div>
    </div>
</div>

<script>
    countryModule.initRegionsGrid();
</script>