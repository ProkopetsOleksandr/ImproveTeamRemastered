@{
    ViewData["Title"] = "Страны";
}

<div class="card">
    <div class="card-header">
        <span class="card-title">Страны</span>
    </div>
    <div class="card-body">
        <div id="countriesGridContainer" class="gridContainer" data-url="@Url.Action("GetCountries", "Countries")"></div>
    </div>
</div>

<div id="editCountryPopupContainer" data-url="@Url.Action("EditCountryPopup", "Countries", new { countryId = "__countryId__" })"></div>

@section Scripts {
    <script src="~/js/country.js" asp-append-version="true"></script>
    <script>
        countryModule.init();
    </script>
}